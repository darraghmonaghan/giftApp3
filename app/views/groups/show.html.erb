


<%= render "partials/fullNavbar" %>


<div class='container'>

	<!-- GROUP INFORMATION -->
	<div class='subheader row'>
		<div class='col-sm-12 col-md-12 col-lg-12'>
			<h1 class='font1 darkGray text-center'><%= @group.title %></h1>
			<h3 class='font2 midGray text-center'><%= @group.description %></h3>

			<div class='row'>
				<div class='text-center col-xs-12 col-sm-4 col-md-4 col-lg-4'>
					<h4 class='font3 lightGray'>Event Date<span class='highlight'>:</span> <%= @group.date.strftime('%v') %></h4>
				</div>
				<div class='text-center col-xs-12 col-sm-4 col-md-4 col-lg-4'>
					<h4 class='font3 lightGray'>Event Time<span class='highlight'>:</span> <%= @group.time %></h4>
				</div>
				<div class='text-center col-xs-12 col-sm-4 col-md-4 col-lg-4'>
					<h4 class='font3 lightGray'>Group Creator<span class='highlight'>:</span> <%= @founder.firstname %></h4>
				</div>
			</div>

		</div>
	</div>
	<hr class='highlight'>

	<div class='row'>
		<div class='col-sm-12 col-md-12 col-lg-12'>
			<div class='panel panel-default'>
				<div class='panel-heading'><h4 class='font1 darkGray'>Group Newsfeed:</h4></div>
					<div class='panel-body'>

						<div class='col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1'>

								<% @group.posts.each do | x | %>
									
									<div>
										<div class='font2'><%= x.content %>
										<p class='font3 pull-right'><%= time_ago_in_words(x.created_at) %> ago by <%= x.user.firstname %></p></div>
									</div>

									<hr class='highlight'>
								<% end %>
						</div><br>

						<div class='col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1'>
					        <%= form_for @post , :url => posts_create_path do |f| %> 

					            <%= f.hidden_field :group_id, :value => params[:id] %>
					            <%= f.hidden_field :user_id, :value => current_user.id %>

								<div class="input-group">
									<%= f.text_field :content, placeholder: 'What would you like to say?', class: "font2 form-control", required: true %>
								   	<span class="input-group-btn">
								        <%= f.submit "Post Comment!", class: "font2 pageBtn btn btn-default ghost-button pull-right" %>
								   	</span>
								</div>

			              	<% end %>
			            </div>

			        </div>
			</div>
		</div>		
	</div><br>



	<div class='row'>

		<!-- MEMBERS LIST -->
		<div class='col-sm-12 col-md-6 col-lg-6'>
			<div class='panel panel-default'>
				<div class='panel-heading'><h4 class='font1 darkGray'>Member Count: <%= @members.count %></h4></div>

					<ul>
						<% @group.users.each do | a | %>
							<li><%= a.firstname %> <%= a.surname %></li>
						<% end %>
					</ul>	

			</div>
		</div>


		<!-- GIFT IDEAS -->
		<div class='col-sm-12 col-md-6 col-lg-6'>
				<div class='panel panel-default'>
					<div class='panel-heading'><h4 class='font1 darkGray'>Gift Ideas:</h4></div>

						<% @group.gifts.each do |a| %>
							<div class='panel-body'>
								<div class='row'>
									<div class='col-xs-4 col-sm-4 col-md-3'>
										<%= image_tag a.avatar.url(:thumb) %>
									</div>
									<div class='col-xs-8 col-sm-8 col-md-9'>
										<h4 class='font2'><%= a.title %></h4>
										<h5 class='font3'><%= a.description %></h5>
										<a href='<%= a.URL %>' class='font4'>Find out More!</a>
										<hr class='highlight'>

										<div class='row'>
											<div class='col-xs-7 col-sm-6 col-md-6'>
												<p class='font3'><strong>Gift Price:</strong> <%= a.price %></p>
												<p class='font3'><strong>No. of Votes:</strong> <%= a.votes.count %></p>
											</div>
											<div class='col-xs-5 col-sm-6 col-md-6'>				
												<%= button_to 'Up Vote!', votes_create_path(:vote => { :gift_id => a.id, :user_id => current_user.id}), class: "font4 pageBtn btn btn-default", :method => :post %>
											</div>
										</div>

									</div>
								</div> <!-- Row -->
							</div>
							<hr>
					<% end %>

		</div>

	</div><!-- Row -->
</div><!-- Container -->	 
