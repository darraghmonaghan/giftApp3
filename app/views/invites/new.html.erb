

<%= render "partials/navbar" %>


	<div class='row'>
		<div class='col-xs-8 col-xs-offset-2 col-sm-6 col-sm-offset-3 col-md-6 col-offset-3'>

			<h1>Invite a Friend to the Group</h1>

						<%= form_for :invite, :url => invites_create_path do |f| %>

						    <%= f.hidden_field :group_id, :value => params[:id] %>

						    <div class="form-group">
						    <%= f.email_field :email1, placeholder: 'Invitees e-mail address', class: "form-control", required: true %>
						    </div>

						    <div class="form-group">
						    <%= f.email_field :email2, placeholder: 'Invitees e-mail address', class: "form-control", required: true %>
						    </div>

						    <div class="form-group">
						    <%= f.email_field :email3, placeholder: 'Invitees e-mail address', class: "form-control", required: true %>
						    </div>

						    <div class="form-group">
						    <%= f.email_field :email4, placeholder: 'Invitees e-mail address', class: "form-control", required: true %>
						    </div>

						    <div class="form-group">
						    <%= f.email_field :email5, placeholder: 'Invitees e-mail address', class: "form-control", required: true %>
						    </div>

						    <%= f.submit 'Send', class: "btn btn-default ghost-button" %>
						
						<% end %>




		</div>
	</div>
