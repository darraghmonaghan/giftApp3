<h1>Payments#new</h1>
<p>Find me in app/views/payments/new.html.erb</p>


<%= form_tag payments_create_path do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
      <span>Amount: $5.00</span>
    </label>
  </article>

    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= @owner_publishable_key %>"
          data-description="<%= @group.title %>"
          data-amount="500"
          data-locale="auto">
    </script>

<% end %>