
<%= render "partials/navbar" %>

<div class='col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3'>


        <div class="font2 col-sm-6 col-sm-offset-2">
              <h2>Sign Up</h2>
        </div><br><br><br><br>


      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
          <div class="col-sm-6">
              <%= f.email_field :email, class: "font3 darkGray form-control", :placeholder => 'E-mail Address' %>
          </div>
      </div>

      <div class="form-group">
          <div class="col-sm-6">
              <%= f.text_field :firstname, class: "font3 darkGray form-control",autofocus: true, :placeholder => 'Firstname' %>
          </div>
      </div>

      <div class="form-group">
          <div class="col-sm-6">
              <%= f.text_field :surname, class: "font3 darkGray form-control",autofocus: true, :placeholder => 'Surname' %>
          </div>
      </div>

      <div class="form-group">
          <div class="col-sm-6">
              <%= f.text_field :phone, class: "font3 darkGray form-control",autofocus: true, :placeholder => 'Mobile Phone No. (Incl. International Code, e.g. +44)' %>
          </div>
      </div>

      <div class="form-group">
          <div class="col-sm-6">
              <%= f.password_field :password, autocomplete: "off", class: "font3 darkGray form-control", :placeholder => 'Password' %>
          </div>
      </div>

      <div class="form-group">
          <div class="col-sm-6">
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "font3 darkGray form-control", :placeholder => 'Confirm Password' %>
          </div>
      </div>

      <!-- Hidden Field for Invitaiton Token -->
            <% if @token != nil %>
                <%= hidden_field_tag :invite_token, @token %>
            <% end %>


      <div class="form-group">
          <div class="col-sm-offset-2 col-sm-6">
              <%= f.submit "Sign up", class: "btn btn-primary" %>
          </div>
      </div>

      <div class="form-group">
          <div class="col-sm-offset-2 col-sm-6">
              <%= render "devise/shared/links" %>
          </div>
      </div>
      <% end %>

</div>
