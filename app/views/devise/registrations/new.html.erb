
<div class='col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3'>


        <div class="col-sm-6 col-sm-offset-2">
              <h2>Sign Up</h2>
        </div><br><br><br><br>


      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
          <%= f.label :email, class: "col-sm-2 control-label" %>
          <div class="col-sm-6">
              <%= f.email_field :email, class: "form-control" %>
          </div>
      </div>

      <div class="form-group">
          <%= f.label :firstname, class: "col-sm-2 control-label" %>
          <div class="col-sm-6">
              <%= f.text_field :firstname, class: "form-control",autofocus: true %>
          </div>
      </div>

      <div class="form-group">
          <%= f.label :surname, class: "col-sm-2 control-label" %>
          <div class="col-sm-6">
              <%= f.text_field :surname, class: "form-control",autofocus: true %>
          </div>
      </div>

      <div class="form-group">
          <%= f.label :password, class: "col-sm-2 control-label" %>
          <div class="col-sm-6">
              <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
          </div>
      </div>

      <div class="form-group">
          <%= f.label :password_confirmation, class: "col-sm-2 control-label" %>
          <div class="col-sm-6">
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
          </div>
      </div>

      <div class="form-group">
          <div class="col-sm-offset-2 col-sm-6">
              <%= f.submit "Sign up", class: "btn btn-primary" %>
          </div>
      </div>

      <div class="form-group">
          <div class="col-sm-offset-2 col-sm-6">
              <%= render "devise/shared/links" %>
          </div>
      </div>
      <% end %>

</div>
